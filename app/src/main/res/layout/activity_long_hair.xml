<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ctec.aboutme.LongHairActivity">

    <TextView android:text="@string/MyHair" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Blondie"
        android:textSize="24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="31dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ToTilted"
        android:background="@drawable/Longhair"
        android:layout_marginTop="253dp"
        android:layout_marginLeft="119dp"
        android:layout_marginStart="119dp"
        android:layout_below="@+id/Blondie"
        android:layout_toRightOf="@+id/Blondie"
        android:layout_toEndOf="@+id/Blondie" />

</RelativeLayout>
